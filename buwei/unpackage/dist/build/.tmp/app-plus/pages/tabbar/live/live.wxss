.content {
  text-align: center;
  /* 搜索框 */
}
.content .titleBox {
  width: 100%;
  display: -webkit-box;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  height: 80rpx;
  line-height: 80rpx;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
      -ms-flex-pack: justify;
          justify-content: space-between;
  -webkit-box-align: center;
  -webkit-align-items: center;
      -ms-flex-align: center;
          align-items: center;
  -webkit-box-sizing: border-box;
          box-sizing: border-box;
  padding: 2%;
  margin-bottom: 10rpx;
}
.content .titleBox .topbarbox {
  width: 85%;
  display: -webkit-box;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
      -ms-flex-pack: center;
          justify-content: center;
  padding-left: 10%;
  -webkit-box-sizing: border-box;
          box-sizing: border-box;
  /* 切换激活样式 */
}
.content .titleBox .topbarbox .fouce {
  font-size: 15pt;
  color: #9e9e9e;
  margin-right: 40rpx;
}
.content .titleBox .topbarbox .fouce .bot-line {
  width: 80%;
  height: 4rpx;
  background-color: #000;
  margin: 0 auto;
  display: none;
}
.content .titleBox .topbarbox .near {
  font-size: 15pt;
  color: #9e9e9e;
}
.content .titleBox .topbarbox .near .bot-line {
  width: 80%;
  height: 4rpx;
  background-color: #000;
  margin: 0 auto;
  display: none;
}
.content .titleBox .topbarbox .active {
  color: #333333;
}
.content .titleBox .topbarbox .active .bot-line {
  display: block;
}
.content .searchBox {
  position: relative;
  /* 放大镜图标定位 */
}
.content .searchBox .search {
  height: 26pt;
  border-radius: 40rpx;
  line-height: 26pt;
  text-align: left;
  margin: 20rpx 40rpx;
  border: 2rpx solid #ccc;
  font-size: 10pt;
  -webkit-box-sizing: border-box;
          box-sizing: border-box;
  padding-left: 60rpx;
}
.content .searchBox image {
  position: absolute;
  left: 52rpx;
  top: 16rpx;
}

